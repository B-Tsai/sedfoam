FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

expressions
(
 /* alpha.a 
  {
    field alpha.a;
    keepPatches true;
    expression "0.5*0.607835*(1+tanh(50-1000*pos().y))";
  }*/
  U.a_top
  {
    field U.a;
    variables "Umax=1.5;y0=0.0485;nu=1e-6;utau=0.112;";
    expression "vector(Umax*0.125*(pos().y-y0)*utau/nu/40.0*exp(-0.000005*sqr((pos().y-y0)*utau/nu)+0.5)*cos(2*pi/50*pos().z*utau/nu)*rand(), 0, Umax/200.0*sin(2*pi/10*pos().x*utau/nu)*(pos().y-y0)*utau/nu*exp(-0.00001*sqr((pos().y-y0)*utau/nu))*rand())";
    keepPatches 1;
  }
  U.a_bot
  {
    field U.a;
    keepPatches true;
    expression "0*U.a";
    condition "alpha.a>0.58";
  }
  U.b_top
  {
    field U.b;
    variables "Umax=1.5;y0=0.0485;nu=1e-6;utau=0.112;";
    expression "vector(Umax*0.125*(pos().y-y0)*utau/nu/40.0*exp(-0.000005*sqr((pos().y-y0)*utau/nu)+0.5)*cos(2*pi/50*pos().z*utau/nu)*rand(), 0, Umax/200.0*sin(2*pi/10*pos().x*utau/nu)*(pos().y-y0)*utau/nu*exp(-0.00001*sqr((pos().y-y0)*utau/nu))*rand())";
    keepPatches 1;
  }
  Ub_bot
  {
    field Ub;
    keepPatches true;
    expression "0*U.b";
    condition "alpha.a>0.58";
  }
);
